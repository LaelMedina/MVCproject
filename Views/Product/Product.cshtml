@{
    var product = ViewData["product"] as MVCproyect.Models.Product;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
</head>
<body>

    <div class="container mt-5">

        <header class="text-center mb-4">
            <h1 class="display-4">Product Details</h1>
        </header>

        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">Product Information</h4>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-sm-2 fw-bold">Id:</div>
                    <div class="col-sm-10">@product.Id</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-2 fw-bold">Name:</div>
                    <div class="col-sm-10">@product.Name</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-2 fw-bold">Description:</div>
                    <div class="col-sm-10">@product.Description</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-2 fw-bold">Price:</div>
                    <div class="col-sm-10">@product.Price$</div>
                </div>
                <div class="row mb-3">
                    <div class="col-sm-2 fw-bold">Created At:</div>
                    <div class="col-sm-10">@product.CreatedAt</div>
                </div>
            </div>
            <div class="card-footer text-center">
                <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
            </div>
        </div>

    </div>
</body>
</html>
