@model MVCproyect.Models.Product

@{
    Product currentProduct = ViewBag.currentProduct;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
</head>
<body>

    <div class="container mt-5">

        <!-- Encabezado del formulario -->
        <header class="text-center mb-4">
            <h1 class="display-4 text-primary">Update Product</h1>
            <p class="text-muted">Modify the details of the product.</p>
        </header>

        <!-- Formulario con ancho ajustado -->
        <form asp-action="UpdateProduct" method="post" class="p-4 rounded shadow-lg bg-white border" style="max-width: 500px; margin: 0 auto;">

            <div class="mb-4">
                <label asp-for="Name" class="form-label font-weight-bold">Product Name</label>
                <div class="input-group">
                    <span class="input-group-text bg-primary text-white">
                        <i class="fas fa-box"></i>
                    </span>
                    <input type="text" asp-for="Name" class="form-control" value="@currentProduct.Name" placeholder="Enter product name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Description" class="form-label font-weight-bold">Description</label>
                <div class="input-group">
                    <span class="input-group-text bg-primary text-white">
                        <i class="fas fa-pencil-alt"></i>
                    </span>
                    <input type="text" asp-for="Description" class="form-control" value="@currentProduct.Description" placeholder="Enter product description" />
                </div>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Stock" class="form-label font-weight-bold">Stock</label>
                <div class="input-group">
                    <span class="input-group-text bg-primary text-white">
                        <i class="fas fa-cogs"></i>
                    </span>
                    <input type="number" asp-for="Stock" class="form-control" value="@currentProduct.Stock" placeholder="Enter product stock" />
                </div>
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Price" class="form-label font-weight-bold">Price</label>
                <div class="input-group">
                    <span class="input-group-text bg-primary text-white">
                        <i class="fas fa-dollar-sign"></i>
                    </span>
                    <input type="number" asp-for="Price" class="form-control" value="@currentProduct.Price" placeholder="Enter product price" />
                </div>
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <input type="number" value="@currentProduct.Id" asp-for="Id" class="form-control" readonly hidden />
            </div>

            <!-- Botón de actualizar -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-edit"></i> Update Product
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>
    </div>

</body>
</html>
