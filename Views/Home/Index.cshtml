@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
</head>
<body>

    <div class="container mt-5">
        <div class="text-center">
            <h1 class="display-4 mb-4">Welcome to the Sales Management System</h1>
            <p class="lead">Manage your products and sales with ease.</p>

            <div class="row justify-content-center mt-4">
                <div class="col-md-4 mb-3">
                    <a href="@Url.Action("Index", "Sale")" class="btn btn-primary btn-lg w-100">
                        <i class="fas fa-shopping-cart"></i> View Sales
                    </a>
                </div>
                <div class="col-md-4 mb-3">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-success btn-lg w-100">
                        <i class="fas fa-box"></i> View Products
                    </a>
                </div>
                <div class="col-md-4 mb-3">
                    <a href="@Url.Action("Index", "Seller")" class="btn btn-info btn-lg w-100">
                        <i class="fas fa-user-tie"></i> Sellers
                    </a>
                </div>
            </div>

            <div class="mt-5">
                <p>For more information, check out our <a href="https://learn.microsoft.com/aspnet/core" target="_blank">documentation</a>.</p>
            </div>
        </div>
    </div>
</body>
</html>
