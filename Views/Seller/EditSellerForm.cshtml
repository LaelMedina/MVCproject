@model MVCproyect.Models.Seller;

@{
    Seller currentSeller = ViewBag.currentSeller;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Seller</title>
</head>
<body>

    <div class="container mt-5">

        <header class="text-center mb-4">
            <h1 class="display-4">Edit Seller</h1>
        </header>

        <form asp-action="UpdateSeller" method="post" class="p-4 border rounded bg-light shadow-sm">

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Full Name</label>
                <input type="text" asp-for="Name" class="form-control" value="@currentSeller.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Identity" class="form-label">Identity</label>
                <input type="text" asp-for="Identity" class="form-control" value="@currentSeller.Identity"/>
                <span asp-validation-for="Identity" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <input type="number" value="@currentSeller.Id" asp-for="Id" class="form-control" readonly hidden />
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary btn-lg">Update</button>
            </div>
        </form>

        <div class="mt-3">
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        </div>

    </div>

</body>
</html>
