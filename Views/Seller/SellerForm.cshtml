@model MVCproyect.Models.Seller

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Seller</title>
</head>
<body>

    <div class="container mt-5">

        <!-- Encabezado del formulario -->
        <header class="text-center mb-4">
            <h1 class="display-4 text-primary">Add Seller</h1>
            <p class="text-muted">Enter the details of the seller below to add a new seller.</p>
        </header>

        <!-- Formulario con ancho ajustado -->
        <form asp-action="Create" method="post" class="p-4 rounded shadow-lg bg-white border" style="max-width: 500px; margin: 0 auto;">

            <div class="mb-4">
                <label asp-for="Name" class="form-label font-weight-bold">Seller Name</label>
                <div class="input-group">
                    <span class="input-group-text bg-primary text-white">
                        <i class="fas fa-user"></i>
                    </span>
                    <input type="text" asp-for="Name" class="form-control" placeholder="Enter seller name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Identity" class="form-label font-weight-bold">Seller Identity</label>
                <div class="input-group">
                    <span class="input-group-text bg-primary text-white">
                        <i class="fas fa-id-card"></i>
                    </span>
                    <input type="text" asp-for="Identity" class="form-control" placeholder="Enter seller identity" />
                </div>
                <span asp-validation-for="Identity" class="text-danger"></span>
            </div>

            <!-- Botón de crear vendedor -->
            <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
                <button type="submit" id="btnCreate" class="btn btn-primary btn-lg">
                    <i class="fas fa-plus-circle"></i> Create Seller
                </button>
                <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
            </div>
        </form>

    </div>

</body>
</html>
