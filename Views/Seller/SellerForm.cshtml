@model MVCproyect.Models.Seller;

@{
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Seller</title>
</head>
<body>

    <div class="container mt-5">

        <header class="text-center mb-4">
            <h1 class="display-4">Add Seller</h1>
        </header>

        <form asp-action="Create" method="post" class="p-4 border rounded bg-light shadow-sm">

            <div class="mb-3">
                <label asp-for="Name" class="form-label">Seller Name</label>
                <input type="text" asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Identity" class="form-label">Seller Identity</label>
                <input type="text" asp-for="Identity" class="form-control" />
                <span asp-validation-for="Identity" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <button type="submit" id="btnCreate" class="btn btn-primary btn-lg">Create</button>
            </div>
        </form>

        <div class="mt-3">
            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        </div>

    </div>

</body>
</html>
