@{
    var usersList = ViewData["usersList"] as List<MVCproyect.Models.User>;
    var userRoleId = Context.Session.GetInt32("UserRoleId");
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users List</title>
</head>
<body>

    <div class="container mt-5">

        <header class="text-center mb-4">
            <h1 class="display-4">List of Users</h1>
        </header>

        @if (userRoleId == 1)
        {
            <div class="mb-4">
                <a asp-action="Create" class="btn btn-primary btn-lg">Create New</a>
            </div>
        }

        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Name</th>
                        <th scope="col">Rol Id</th>

                        @if (userRoleId == 1)
                        {
                            <th scope="col">Action</th>
                        }

                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in usersList)
                    {
                        <tr>
                            <td>@user.UserId</td>
                            <td>@user.UserName</td>
                            <td>@user.RoleId</td>

                            @if (userRoleId == 1)
                            {
                                <td>
                                    <form asp-action="Update" method="post" style="display:inline">
                                        <input type="hidden" name="id" value="@user.UserId" />
                                        <button type="submit" class="btn btn-outline-primary btn-sm">Edit</button>
                                    </form>

                                    <form asp-action="Delete" method="post" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                        <input type="hidden" name="id" value="@user.UserId" />
                                        <button type="submit" class="btn btn-outline-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>

    </div>
</body>
</html>
